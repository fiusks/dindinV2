{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "./src",
    "lib": ["ES6","DOM"],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "typeRoots": [
      "@types",
      "./node_modules/@types",
    ]

  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
}
